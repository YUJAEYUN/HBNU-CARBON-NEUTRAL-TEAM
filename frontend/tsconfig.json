{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",  // ✅ 프로젝트 루트 기준 경로 설정 추가
    "paths": {
      "@/*": ["src/*"],  // ✅ '@/lib/supabase' → 'src/lib/supabase' 변환
      "@/lib/*": ["src/lib/*"],  // ✅ lib 경로를 확실하게 인식하도록 추가
      "@/components/*": ["src/components/*"],  // ✅ components도 추가
      "@/app/*": ["src/app/*"]  // ✅ app 폴더도 명확하게 인식되도록 설정
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx"  // ✅ src 폴더 내부 모든 TypeScript 파일을 포함
  ],
  "exclude": ["node_modules"]
}
